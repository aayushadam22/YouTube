<Window>:
	con:con
	conf:conf
	act:act
	rec:rec
	d:d
	GridLayout:
		size:root.width,root.height
		rows:6
		cols:1
		GridLayout:
			rows:1
			cols:2
			Label:
				text:'Country:'
				font_size:45
				halign:'center'
			TextInput:
				id:con
				multiline:False
				font_size:45
				halign:'center'
				background_color:(0.3,0.3,0.3,1)
				foreground_color:1,1,1,1
		GridLayout:
			rows:1
			cols:2
			Label:
				text:'Confirmed'
				font_size:45
				halign:'center'
			Label:
				id:conf
				text:''
				font_size:45
				halign:'center'
				color:0,0,1,1
		GridLayout:
			rows:1
			cols:2
			Label:
				text:'Active'
				font_size:45
				halign:'center'
			Label:
				id:act
				text:''
				font_size:45
				halign:'center'
				color:1,0,0,1
		GridLayout:
			rows:1
			cols:2
			Label:
				text:'Recovered'
				font_size:45
				halign:'center'
			Label:
				id:rec
				text:''
				font_size:45
				halign:'center'
				color:0,1,0,1
		GridLayout:
			rows:1
			cols:2
			Label:
				text:'Dead'
				font_size:45
				halign:'center'
			Label:
				id:d
				text:''
				font_size:45
				halign:'center'
				color:0.75,0.75,0.75,1
		Button:
			text:'Load'
			on_press:root.btn()